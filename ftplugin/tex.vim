" compile the pdf
nnoremap <F3> :Shell! latex-mk --pdflatex %<CR>

" for latex environment around existing text with surround
let g:surround_108 = "\\begin{\1environment: \1}\r\\end{\1\1}"

" for not using conceal in insert mode
set concealcursor=

" for completion of bibtex
let g:ycm_semantic_triggers = {
\  'tex'  : ['\ref{','\cite{'],
\ }

" for filetype of tex
let g:tex_flavor='latex'

